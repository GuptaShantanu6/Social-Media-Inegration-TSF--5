<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/introTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Media Integration"
        android:textColor="#ffffff"
        android:fontFamily="@font/lemonte_buster"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="250dp"/>

    <LinearLayout
        android:id="@+id/logInLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/introTextView"
        android:layout_marginTop="50dp">

        <FrameLayout
            android:id="@+id/google_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <View
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_box"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:lottie_fileName="google_icon_lottie.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google \nSign-In"
                android:fontFamily="@font/lemonte_buster"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="90dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fc_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_box"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:lottie_fileName="2826-facebook.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook \nSign-In"
                android:fontFamily="@font/lemonte_buster"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="80dp"
                android:gravity="center"
                android:layout_marginTop="3dp" />

        </FrameLayout>

    </LinearLayout>




</RelativeLayout>