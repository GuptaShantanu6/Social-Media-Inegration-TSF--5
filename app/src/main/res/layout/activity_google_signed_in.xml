<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleSignedInActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/gt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gSignOutView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Google Sign In \nAccount"
        android:textColor="#ffffff"
        android:fontFamily="@font/lemonte_buster"
        android:textSize="40sp"
        android:gravity="center" />

    <View
        android:id="@+id/gSignOutView"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@drawable/rectangle_box"
        app:layout_constraintTop_toBottomOf="@id/gt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/gSignOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gSignOutView"
        app:layout_constraintBottom_toBottomOf="@id/gSignOutView"
        app:layout_constraintStart_toStartOf="@id/gSignOutView"
        app:layout_constraintEnd_toEndOf="@id/gSignOutView"
        android:textColor="#000000"
        android:text="Sign Out"
        android:fontFamily="@font/lemonte_buster"
        android:textSize="30sp" />

</androidx.constraintlayout.widget.ConstraintLayout>